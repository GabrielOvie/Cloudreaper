      "log_groups": {{ logs_analysis | length | default(0) }}
    }
  },
  "detailed_analysis": {
    "ec2_instances": {{ ec2_analysis | default([]) | to_nice_json }},
    "ebs_volumes": {{ ebs_analysis | default([]) | to_nice_json }},
    "s3_buckets": {{ s3_analysis | default([]) | to_nice_json }},
    "cloudwatch_logs": {{ logs_analysis | default([]) | to_nice_json }}
  },
  "recommendations": [
    "Stop non-production EC2 instances during off-hours",
    "Delete unattached EBS volumes",
    "Implement S3 lifecycle policies",
