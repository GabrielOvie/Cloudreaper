{
  "audit_date": "{{ audit_date }}",
  "region": "{{ aws_region }}",
  "summary": {
    "total_potential_savings_monthly": {{ grand_total_savings | float | round(2) }},
    "total_potential_savings_annual": {{ (grand_total_savings | float * 12) | round(2) }},
    "resources_analyzed": {
      "ec2_instances": {{ ec2_analysis | length | default(0) }},
